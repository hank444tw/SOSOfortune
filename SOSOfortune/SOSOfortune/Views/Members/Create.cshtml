@model SOSOfortune.Models.Member

@{
    ViewBag.Title = "新增會員";
}

<h2>Create</h2>

@using (Html.BeginRouteForm("CreateMember", FormMethod.Post))
{

    @Html.AntiForgeryToken()//預防跨網站攻擊

    <div class="form-horizontal">

        <h4>新增會員</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @*--------姓名------*@
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        @*--------性別------*@
        <div class="form-group">
            @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.Gender, "M", new { @class = "form-check-input", @checked = "checked" })
                    @Html.Label("男", new { @class = "form-check-label" })
                </div>
                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.Gender, "W", new { @class = "form-check-input" })
                    @Html.Label("女", new { @class = "form-check-label" })
                </div>
                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
            </div>
        </div>

        @*--------電子信箱------*@
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        @*--------手機------*@
        <div class="form-group">
            @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        @*--------帳號------*@
        <div class="form-group">
            @Html.LabelFor(model => model.Mem_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Mem_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mem_id, "", new { @class = "text-danger" })
            </div>
        </div>

        @*--------密碼------*@
        <div class="form-group">
            @Html.LabelFor(model => model.Mem_password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.PasswordFor(model => model.Mem_password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Mem_password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="新增" class="btn btn-warning" />
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
